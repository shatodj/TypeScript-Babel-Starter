{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": false,
		"allowJs": false,
		"sourceMap": false,
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDir": "./src",
		"outDir": "./dist",
		"lib": ["es2015"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"skipLibCheck": false
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
